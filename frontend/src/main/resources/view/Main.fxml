<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController"

      style="-fx-background-image: url('https://i.redd.it/u360o46cl3de1.png'); -fx-background-size: cover; -fx-background-position: center center; -fx-background-color: rgba(0, 0, 0, 0.6);">
    <!-- Megjegyzés: A -fx-background-color: rgba(0, 0, 0, 0.6) sötét réteget biztosít a kép felett, javítva az olvashatóságot. -->

    <children>
        <!-- Főmenü Kártya -->
        <VBox alignment="CENTER" maxWidth="400.0" prefHeight="350.0" prefWidth="400.0" spacing="25.0" style="-fx-background-color: rgba(44, 44, 44, 0.9); -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 20, 0.0, 0, 0);">
            <children>
                <!-- Cím -->
                <Label text="Absolute Cinema" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label text="Online Jegyfoglalási Rendszer" textFill="#cccccc">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <!-- Gombok Konténere -->
                <VBox alignment="CENTER" spacing="15.0">

                    <!-- FILM LISTA GOMB (Narancssárga kiemelés) -->
                    <Button mnemonicParsing="false" onAction="#goToMovieList" prefHeight="55.0" prefWidth="280.0" style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,102,0,0.5), 15, 0.0, 0, 3);" text="Filmek Műsoron" />

                    <!-- FOGLALÁSAIM GOMB -->
                    <Button mnemonicParsing="false" onAction="#goToMyBookings" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.0, 0, 1);" text="Foglalásaim" />

                    <!-- PROFIL GOMB -->
                    <Button mnemonicParsing="false" onAction="#goToProfile" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.0, 0, 1);" text="Profilom" />

                </VBox>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </VBox>
    </children>
</VBox>