<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.MovieDetailsController">
    <children>
        <!-- FEJLÉC -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackToList" style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;" text="&lt; Filmlista" />
                <Label fx:id="titleLabel" text="Film Cím" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: #f0f0f0;">
            <content>
                <HBox alignment="TOP_LEFT" spacing="30.0" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.0, 0, 0);">
                    <children>
                        <!-- BAL OLDAL: POSZTER ÉS ALAP ADATOK -->
                        <VBox alignment="TOP_CENTER" spacing="10.0" minWidth="200.0" maxWidth="200.0">
                            <children>
                                <ImageView fx:id="posterView" fitHeight="300.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.0, 2, 2);" />
                                <Label fx:id="durationLabel" text="Játékidő: X perc" style="-fx-font-weight: bold;" />
                                <!-- KIEMELÉS: Korhatár címke narancssárga háttérrel -->
                                <Label fx:id="ageRatingLabel" text="Korhatár: X+"
                                       style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 5; -fx-font-size: 14px;" />
                            </children>
                        </VBox>
                        <!-- JOBB OLDAL: LEÍRÁS ÉS IDŐPONTOK -->
                        <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                            <children>
                                <!-- Leírás -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Összefoglaló" textFill="#1a1a1a">
                                            <font>
                                                <Font name="System Bold" size="22.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="descriptionLabel" alignment="TOP_LEFT" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Film leírás..." wrapText="true" />
                                    </children>
                                </VBox>
                                <!-- Vetítési Időpontok -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="Vetítési Időpontok" textFill="#ff6600">
                                            <font>
                                                <Font name="System Bold" size="22.0" />
                                            </font>
                                        </Label>
                                        <!-- A FlowPane továbbra is a vetítési időpontok konténere, a Controller ebbe fogja a dátum szerinti csoportokat generálni -->
                                        <FlowPane fx:id="showtimesFlowPane" hgap="10.0" vgap="10.0" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5;">
                                            <!-- Itt jelennek meg dinamikusan a DÁTUM FEJLÉCEK és az időpont gombok -->
                                        </FlowPane>
                                        <Label text="Kattints az időpontra a helyfoglaláshoz. (Adatátadás: film ID + időpont ID)" textFill="#666666" style="-fx-font-style: italic;" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </content>
        </ScrollPane>
    </children>
</VBox>