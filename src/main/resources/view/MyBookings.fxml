<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.MyBookingsController"
      style="-fx-background-color: #f0f0f0;" prefWidth="800" prefHeight="600">

    <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 20;">
        <Label text="Foglalásaim" textFill="WHITE">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>
    </VBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="bookingsContainer" spacing="10" style="-fx-padding: 20; -fx-background-color: #f0f0f0;" />
        </content>
    </ScrollPane>

    <VBox style="-fx-padding: 15; -fx-alignment: center-right;">
        <Button text="Vissza a főmenübe" onAction="#goBack"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </VBox>
</VBox>